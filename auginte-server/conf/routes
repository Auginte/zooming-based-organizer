# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.auginte.server.controllers.Application.index

# Assets
GET     /favicon.ico                controllers.Assets.at(path="/public", file="icons/favicon.ico")
GET     /apple-touch-icon.png       controllers.Assets.at(path="/public", file="icons/apple-touch-icon.png")
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Saving
POST   /demo/save/:hash             com.auginte.server.controllers.Application.store(hash)

# Loading
GET   /demo/load/:id/:hash         com.auginte.server.controllers.Application.load(id, hash)